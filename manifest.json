{
  "manifest_version": 3,
  "name": "高效率工作提醒机器",
  "version": "1.0",
  "description": "一个定时提醒您休息的浏览器插件，以保持高效率工作。",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": []
    }
  ]
}